.under-header
  background-color #748097
  width 100%
  height 40px
  display flex
  flex-direction row
  justify-content flex-start
  align-items center
  &__wrap
    margin-left 30px
  &__link
    color #ffffff
    font-family "Montserrat", sans-serif
    font-size 16px
    font-weight 400
    line-height 20px
    text-decoration none
  &__span
    width 7px
    height 11px
    color #c7ccd5
    margin 0 10px
    font-weight bold