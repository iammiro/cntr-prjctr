.under-header-nav
  width 100%
  padding 20px 0
  &__wrap
    padding 0 20px
    display flex
    flex-direction row
    justify-content space-between
    align-items center
  &__p
    color #474d58
    font-family "Montserrat", sans-serif
    font-size 34px
    font-weight 700
    line-height 20px
  &__indicator
    width 116px
    height 23px
    font-family "Montserrat", sans-serif
    line-height 20px
.back-btn
  width 146px
  height 42px
  border-radius 4px
  background-color #748096
  color #ffffff
  font-family "Montserrat", sans-serif
  font-size 20px
  font-weight 400
  &__img
    float left
    margin-right 10px
  &__link
    color #ffffff
    font-family "Montserrat", sans-serif
    font-size 20px
    font-weight 400
    text-decoration none
    display flex
    flex-direction row-reverse
    justify-content center
    align-items center
    width 100%
    height 100%